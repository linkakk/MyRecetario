<!-- res/drawable/fondo_tarea_redondeado.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borde negro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@color/black" /> <!-- Borde negro -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Fondo color buttons -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Fondo del color buttons -->
            <corners android:radius="14dp" />
        </shape>
    </item>
</layer-list>
