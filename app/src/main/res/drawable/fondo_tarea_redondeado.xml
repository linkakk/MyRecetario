<!-- res/drawable/fondo_tarea_redondeado.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borde negro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="#000000" /> <!-- Color negro y grosor del borde -->
            <corners android:radius="16dp" /> <!-- Ajusta el radio para redondear las esquinas -->
        </shape>
    </item>

    <!-- Fondo blanco de la tarea -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</layer-list>
