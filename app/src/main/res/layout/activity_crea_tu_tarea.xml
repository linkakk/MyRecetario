<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreaTuTarea"
    android:background="@color/fondoPrincipal">

    <!-- Header de la actividad -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttons"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tareas"
            android:textSize="50sp" />
    </LinearLayout>

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

        <!-- Campo de entrada de descripción -->
        <EditText
            android:id="@+id/input_descripcion_tarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_tarea_redondeado"
            android:gravity="top"
            android:hint="¿Qué hay que hacer?"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:padding="3dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black" />

        <!-- Sección para seleccionar fecha límite -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingTop="16dp"
            android:text="Fecha límite"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/fecha"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_fecha_limite"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:background="@drawable/calendario"
                android:contentDescription="Seleccionar fecha límite" />
        </LinearLayout>

        <!-- Sección para añadir listas -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Añadir a la lista"
            android:textColor="@color/black"
            android:textSize="25sp" />



            <Button
                android:id="@+id/btn_add_lista"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/addtareas"
                android:contentDescription="Agregar una nueva lista"
                android:tint="@color/white" />
        </LinearLayout>

        <!-- Spinner para seleccionar lista -->
        <Spinner
            android:id="@+id/spinner_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:prompt="@string/selectList" />

        <!-- Botón para guardar tarea -->
        <Button
            android:id="@+id/btn_guardar_tarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/buttons"
            android:text="Guardar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
